'use strict';

var app = angular.module('legacyTeam', ['ngRoute']);

app.config(['$routeProvider', '$locationProvider', function($routeProvider, $locationProvider) {
  $routeProvider.
    when('/', {
      templateUrl: "<%= asset_path('home.html') %>",
      controller: 'HomeCtrl'
    }).

    when('/about-us', {
      templateUrl: "<%= asset_path('about-us.html') %>",
      controller: 'AboutUsCtrl'
    }).

    when('/resources', {
      templateUrl: "<%= asset_path('resources.html') %>",
      controller: 'ResourcesCtrl'
    }).

    when('/corporate-services', {
      templateUrl: "<%= asset_path('corporate-services.html') %>",
      controller: 'CorporateServicesCtrl'
    }).

    when('/specialized-services', {
      templateUrl: "<%= asset_path('specialized-services.html') %>",
      controller: 'SpecializedServicesCtrl'
    }).

    when('/contact-us', {
      templateUrl: "<%= asset_path('contact-us.html') %>",
      controller: 'ContactUsCtrl'
    }).

    otherwise({
      redirectTo: '/'
    });

    $locationProvider.html5Mode(true);
}])
  .directive('headNav', function() {
    return {
      templateUrl: "<%= asset_path('head_nav.html') %>",
      controller: 'HeadNavCtrl'
    };
}).directive('footNav', function() {
    return {
      templateUrl: "<%= asset_path('foot_nav.html') %>",
      controller: 'FootNavCtrl'
    };
});
